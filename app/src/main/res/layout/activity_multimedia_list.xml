<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_sky_blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <!-- A RecyclerView with some commonly used attributes -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <ToggleButton
            android:id="@+id/btn_building"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/ghost_white"
            android:text="Edificio"
            android:textOff="Building"
            android:textOn="Building"
            android:textSize="8sp" />

        <ToggleButton
            android:id="@+id/btn_floor"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:autoText="false"
            android:background="@color/ghost_white"
            android:checked="true"
            android:text="Floor"
            android:textOff="Floor"
            android:textOn="Floor"
            android:textSize="8sp" />

        <ToggleButton
            android:id="@+id/btn_room"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/ghost_white"
            android:textOff="Room"
            android:textOn="Room"
            android:textSize="8sp" />

        <ToggleButton
            android:id="@+id/btn_level"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/ghost_white"
            android:text="Year"
            android:textAlignment="center"
            android:textOff="level"
            android:textOn="level"
            android:textSize="8sp" />

        <ToggleButton
            android:id="@+id/btn_corridor"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.30"
            android:background="@color/ghost_white"
            android:text="ToggleButton"
            android:textOff="corridor"
            android:textOn="corridor"
            android:textSize="7sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvIntelBinList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>