<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="6dip"
    android:background="@color/ghost_white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/album_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="TODO"
        android:cropToPadding="false"
        app:srcCompat="@mipmap/mp3_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></ImageView>


    <TextView
        android:id="@+id/media_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/music_checkBox"
        android:layout_alignEnd="@+id/artist_name"
        android:layout_alignLeft="@+id/artist_name"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/artist_name"
        android:layout_alignStart="@+id/artist_name"
        android:layout_toStartOf="@+id/music_year"
        android:maxLines="1"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/music_year"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/album_image"
        android:layout_toRightOf="@+id/album_image"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/music_checkBox"
        style="@android:style/Widget.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:buttonTint="@color/dark_sky_blue"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/music_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="13sp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/music_length"
        android:layout_toStartOf="@+id/music_length" />

    <TextView
        android:id="@+id/music_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_toLeftOf="@+id/music_checkBox"
        android:layout_toStartOf="@+id/music_checkBox"
        android:text="TextView"
        android:textSize="13sp" />


</RelativeLayout>

