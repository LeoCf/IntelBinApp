<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:background="@color/ghost_white"
    android:padding="6dip"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/intelBin_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="TODO"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/mad_build"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></ImageView>

    <TextView
        android:id="@+id/intelBin_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_sky_blue"
        android:layout_marginRight="5dp"
        android:text="TextView"
        android:layout_alignBaseline="@+id/inteBin_name"
        android:layout_alignBottom="@+id/inteBin_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/intelBin_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_sky_blue"
        android:text="TextView"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        android:layout_alignBaseline="@+id/intelBin_floor"
        android:layout_alignBottom="@+id/intelBin_floor"
        android:layout_toLeftOf="@+id/intelBin_level"
        android:layout_toStartOf="@+id/intelBin_level" />

    <TextView
        android:id="@+id/inteBin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_sky_blue"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/problem_text"
        android:layout_toEndOf="@+id/problem_text"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/intelBin_level"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/intelBin_location"
        android:layout_alignBottom="@+id/intelBin_location"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/dark_sky_blue"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/problem_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inteBin_name"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/inteBin_name"
        android:layout_below="@+id/intelBin_building"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hint="Problem Description"
        android:inputType="textPersonName"
        android:layout_toLeftOf="@+id/intelBin_location"
        android:layout_toStartOf="@+id/intelBin_location" />

    <TextView
        android:id="@+id/problem_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_sky_blue"
        android:text="Problems"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignBaseline="@+id/problem_input"
        android:layout_alignBottom="@+id/problem_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_prob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@android:color/holo_green_light"
        android:textSize="8sp"
        android:layout_alignBottom="@+id/problem_input"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/problem_input"
        android:layout_toEndOf="@+id/problem_input" />


</RelativeLayout>

